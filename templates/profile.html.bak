{% extends 'base.html' %}

{% block title %}My Profile - Fit Smart{% endblock %}

{% block content %}
<div class="bg-gray-50 py-8">
    <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold mb-6">My Profile</h1>
        
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Profile Info -->
            <div class="lg:w-1/3">
                <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
                    <div class="bg-primary text-white p-4">
                        <h2 class="text-xl font-semibold">Account Information</h2>
                    </div>
                    
                    <div class="p-6">
                        <div class="space-y-4">
                            <div>
                                <h3 class="text-sm text-gray-500">Name</h3>
                                <p class="font-medium">{{ user.name }}</p>
                            </div>
                            
                            <div>
                                <h3 class="text-sm text-gray-500">Email</h3>
                                <p class="font-medium">{{ user.email }}</p>
                            </div>
                            
                            <div>
                                <h3 class="text-sm text-gray-500">Phone</h3>
                                <p class="font-medium">{{ user.phone or 'Not provided' }}</p>
                            </div>
                        </div>
                        
                        <div class="border-t mt-4 pt-4">
                            <h3 class="text-sm text-gray-500 mb-2">Delivery Address</h3>
                            <address class="not-italic">
                                {% if user.address %}
                                    {{ user.address }}<br>
                                    {{ user.city }}, {{ user.province }} {{ user.postal_code }}
                                {% else %}
                                    No address provided
                                {% endif %}
                            </address>
                        </div>
                        
                        <div class="mt-6">
                            <a href="#" class="text-primary hover:text-green-600 text-sm">Edit account details</a>
                        </div>
                    </div>
                </div>
                
                <!-- Order History - Future implementation -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="bg-primary text-white p-4">
                        <h2 class="text-xl font-semibold">Order History</h2>
                    </div>
                    
                    <div class="p-6 text-center text-gray-500 py-12">
                        <p>Your order history will appear here.</p>
                        <p class="text-sm mt-2">Coming soon!</p>
                    </div>
                </div>
            </div>
            
            <!-- Subscriptions -->
            <div class="lg:w-2/3">
                <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
                    <div class="bg-primary text-white p-4">
                        <h2 class="text-xl font-semibold">My Subscriptions</h2>
                    </div>
                    
                    <div class="p-6">
                        {% if active_subscriptions %}
                            <h3 class="font-bold text-lg mb-4">Active Subscriptions</h3>
                            <div class="space-y-6">
                                {% for subscription in active_subscriptions %}
                                    <div class="border rounded-lg overflow-hidden">
                                        <div class="bg-green-50 p-4 flex justify-between items-center">
                                            <div>
                                                <h4 class="font-semibold">{{ subscription.meal_plan.name }}</h4>
                                                <span class="text-sm text-gray-600">{{ subscription.frequency.value|capitalize }}</span>
                                            </div>
                                            <div class="flex items-center">
                                                <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded">Active</span>
                                            </div>
                                        </div>
                                        
                                        <div class="p-4">
                                            <div class="grid grid-cols-2 gap-4 text-sm mb-4">
                                                <div>
                                                    <span class="text-gray-500">Start Date</span>
                                                    <p>{{ subscription.start_date.strftime('%b %d, %Y') }}</p>
                                                </div>
                                                <div>
                                                    <span class="text-gray-500">Next Delivery</span>
                                                    <p>{{ (subscription.current_period_start + timedelta(days=3)).strftime('%a, %b %d') }}</p>
                                                </div>
                                                <div>
                                                    <span class="text-gray-500">Period</span>
                                                    <p>{{ subscription.current_period_start.strftime('%b %d') }} - {{ subscription.current_period_end.strftime('%b %d, %Y') }}</p>
                                                </div>
                                                <div>
                                                    <span class="text-gray-500">Price</span>
                                                    <p>${{ subscription.price }}</p>
                                                </div>
                                            </div>
                                            
                                            <!-- Upcoming Deliveries Section -->
                                            {% if subscription_deliveries[subscription.id] %}
                                            <div class="mt-4 border-t pt-4">
                                                <h5 class="font-semibold text-sm mb-2">Upcoming Deliveries</h5>
                                                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
                                                    {% for delivery in subscription_deliveries[subscription.id] %}
                                                    <div class="border rounded p-2 text-sm {% if delivery.is_skipped %}bg-gray-50{% endif %}">
                                                        <div class="flex justify-between items-center">
                                                            <span class="{% if delivery.is_skipped %}line-through text-gray-500{% endif %}">
                                                                {{ delivery.formatted_date }}
                                                            </span>
                                                            {% if delivery.is_skipped %}
                                                                <span class="text-xs bg-gray-200 text-gray-800 px-1 py-0.5 rounded">Skipped</span>
                                                            {% endif %}
                                                        </div>
                                                        
                                                        {% if delivery.can_skip and not delivery.is_skipped %}
                                                        <form action="{{ url_for('skip_delivery', subscription_id=subscription.id) }}" method="POST" class="mt-1">
                                                            <input type="hidden" name="delivery_date" value="{{ delivery.date }}">
                                                            <button type="submit" class="w-full bg-gray-200 hover:bg-gray-300 text-gray-800 text-xs py-1 px-2 rounded">
                                                                Skip this delivery
                                                            </button>
                                                        </form>
                                                        {% elif delivery.is_skipped and not delivery.cutoff_passed %}
                                                        <form action="{{ url_for('unskip_delivery', subscription_id=subscription.id) }}" method="POST" class="mt-1">
                                                            <input type="hidden" name="delivery_date" value="{{ delivery.date }}">
                                                            <button type="submit" class="w-full bg-green-100 hover:bg-green-200 text-green-800 text-xs py-1 px-2 rounded">
                                                                Restore this delivery
                                                            </button>
                                                        </form>
                                                        {% elif delivery.cutoff_passed %}
                                                        <p class="text-xs text-gray-500 mt-1">
                                                            Past cutoff time
                                                        </p>
                                                        {% endif %}
                                                    </div>
                                                    {% endfor %}
                                                </div>
                                                <p class="text-xs text-gray-500 mt-2">
                                                    Note: Deliveries can be skipped up to 5 hours before the 6-10 PM delivery window.
                                                </p>
                                            </div>
                                            {% endif %}
                                            
                                            <div class="flex justify-end space-x-2 mt-4">
                                                <form action="{{ url_for('pause_subscription', subscription_id=subscription.id) }}" method="POST">
                                                    <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white font-medium py-1 px-3 rounded text-sm">
                                                        Pause
                                                    </button>
                                                </form>
                                                <form action="{{ url_for('cancel_subscription', subscription_id=subscription.id) }}" method="POST" onsubmit="return confirm('Are you sure you want to cancel this subscription?');">
                                                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-medium py-1 px-3 rounded text-sm">
                                                        Cancel
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        
                        {% if paused_subscriptions %}
                            <h3 class="font-bold text-lg mb-4 mt-8">Paused Subscriptions</h3>
                            <div class="space-y-6">
                                {% for subscription in paused_subscriptions %}
                                    <div class="border rounded-lg overflow-hidden">
                                        <div class="bg-yellow-50 p-4 flex justify-between items-center">
                                            <div>
                                                <h4 class="font-semibold">{{ subscription.meal_plan.name }}</h4>
                                                <span class="text-sm text-gray-600">{{ subscription.frequency.value|capitalize }}</span>
                                            </div>
                                            <div class="flex items-center">
                                                <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded">Paused</span>
                                            </div>
                                        </div>
                                        
                                        <div class="p-4">
                                            <div class="grid grid-cols-2 gap-4 text-sm mb-4">
                                                <div>
                                                    <span class="text-gray-500">Start Date</span>
                                                    <p>{{ subscription.start_date.strftime('%b %d, %Y') }}</p>
                                                </div>
                                                <div>
                                                    <span class="text-gray-500">Paused On</span>
                                                    <p>{{ subscription.updated_at.strftime('%b %d, %Y') }}</p>
                                                </div>
                                                <div>
                                                    <span class="text-gray-500">Original Period</span>
                                                    <p>{{ subscription.current_period_start.strftime('%b %d') }} - {{ subscription.current_period_end.strftime('%b %d, %Y') }}</p>
                                                </div>
                                                <div>
                                                    <span class="text-gray-500">Price</span>
                                                    <p>${{ subscription.price }}</p>
                                                </div>
                                            </div>
                                            
                                            <div class="flex justify-end space-x-2">
                                                <form action="{{ url_for('resume_subscription', subscription_id=subscription.id) }}" method="POST">
                                                    <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-medium py-1 px-3 rounded text-sm">
                                                        Resume
                                                    </button>
                                                </form>
                                                <form action="{{ url_for('cancel_subscription', subscription_id=subscription.id) }}" method="POST" onsubmit="return confirm('Are you sure you want to cancel this subscription?');">
                                                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-medium py-1 px-3 rounded text-sm">
                                                        Cancel
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        
                        {% if canceled_subscriptions %}
                            <h3 class="font-bold text-lg mb-4 mt-8">Canceled Subscriptions</h3>
                            <div class="space-y-6">
                                {% for subscription in canceled_subscriptions %}
                                    <div class="border rounded-lg overflow-hidden">
                                        <div class="bg-gray-50 p-4 flex justify-between items-center">
                                            <div>
                                                <h4 class="font-semibold">{{ subscription.meal_plan.name }}</h4>
                                                <span class="text-sm text-gray-600">{{ subscription.frequency.value|capitalize }}</span>
                                            </div>
                                            <div class="flex items-center">
                                                <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded">Canceled</span>
                                            </div>
                                        </div>
                                        
                                        <div class="p-4">
                                            <div class="grid grid-cols-2 gap-4 text-sm">
                                                <div>
                                                    <span class="text-gray-500">Start Date</span>
                                                    <p>{{ subscription.start_date.strftime('%b %d, %Y') }}</p>
                                                </div>
                                                <div>
                                                    <span class="text-gray-500">Canceled On</span>
                                                    <p>{{ subscription.updated_at.strftime('%b %d, %Y') }}</p>
                                                </div>
                                                <div>
                                                    <span class="text-gray-500">Original Period</span>
                                                    <p>{{ subscription.current_period_start.strftime('%b %d') }} - {{ subscription.current_period_end.strftime('%b %d, %Y') }}</p>
                                                </div>
                                                <div>
                                                    <span class="text-gray-500">Original Price</span>
                                                    <p>${{ subscription.price }}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        
                        {% if not active_subscriptions and not paused_subscriptions and not canceled_subscriptions %}
                            <div class="text-center py-12">
                                <p class="text-gray-500 mb-4">You don't have any subscriptions yet.</p>
                                <a href="{{ url_for('meal_plans') }}" class="bg-primary hover:bg-green-600 text-white font-bold py-2 px-4 rounded-md inline-block transition">
                                    Browse Meal Plans
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
                
                <!-- Coming Soon: Nutrition Tracking -->
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="bg-gray-100 p-4 flex justify-between items-center">
                        <h2 class="text-xl font-semibold">Nutrition Tracking</h2>
                        <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded">Coming Soon</span>
                    </div>
                    
                    <div class="p-6 text-center text-gray-500 py-12">
                        <p>Track your nutritional intake and progress.</p>
                        <p class="text-sm mt-2">This feature will be available soon!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
